@model E_Shop.ViewModels.DamageDetailViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Damage Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">VAT</dt>
        <dd class="col-sm-10">@Model.Vat</dd>

        <dt class="col-sm-2">Sub Total</dt>
        <dd class="col-sm-10">@Model.SubTotal</dd>

        <dt class="col-sm-2">Store</dt>
        <dd class="col-sm-10">@Model.StoreName</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="DamageDetailId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
