@model E_Shop.ViewModels.DamageDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Damage Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">VAT</dt>
        <dd class="col-sm-10">@Model.Vat</dd>

        <dt class="col-sm-2">Sub Total</dt>
        <dd class="col-sm-10">@Model.SubTotal</dd>

        <dt class="col-sm-2">Store</dt>
        <dd class="col-sm-10">@Model.StoreName</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DamageDetailId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
