@model E_Shop.ViewModels.DamageDetailViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DamageDetailId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProductId" class="control-label"></label>
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products"></select>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Vat" class="control-label"></label>
        <input asp-for="Vat" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SubTotal" class="control-label"></label>
        <input asp-for="SubTotal" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StoreId" class="control-label"></label>
        <select asp-for="StoreId" class="form-control" asp-items="ViewBag.Stores"></select>
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
