@using E_Shop.ViewModels
@model InventoryTypeViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded">
                <div class="card-header bg-info text-white text-center">
                    <i class="bi bi-box"></i> <strong>Edit Inventory Type</strong>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="InventoryTypeId" />

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="control-label font-weight-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-gear"></i></span>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter Inventory Name" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Remarks" class="control-label font-weight-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-chat-left-dots"></i></span>
                                <input asp-for="Remarks" class="form-control form-control-lg" placeholder="Enter Remarks" />
                            </div>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg px-4 py-2">
                                <i class="bi bi-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary btn-lg px-4 py-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
