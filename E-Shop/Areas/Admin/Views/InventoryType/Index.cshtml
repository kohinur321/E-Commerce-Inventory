@model IEnumerable<E_Shop.ViewModels.InventoryTypeViewModel>

@{
    ViewData["Title"] = "Inventory Types";
}


<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-boxes me-2"></i> Inventory Types</h4>
            <a asp-action="Create" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Create New
            </a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().InventoryTypeId)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Remarks)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.InventoryTypeId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Remarks)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.InventoryTypeId" class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.InventoryTypeId" class="btn btn-info btn-sm text-white me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.InventoryTypeId" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
