@model IEnumerable<E_Shop.ViewModels.PurchaseViewModel>

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-gradient text-white" style="background-color: #198754;">
            <h5 class="mb-0"><i class="bi bi-list-check me-2"></i> Purchase List</h5>
        </div>
        <div class="card-body px-4">
            <table class="table table-hover text-center align-middle">
                <thead class="table-success">
                    <tr>
                        <th>Supplier Name</th>
                        <th>Description</th>
                        <th>Approval Status</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SupplierName</td>
                            <td>@item.Description</td>
                            <td>
                                @if (item.IsApprove)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Create" asp-route-id="@item.PurchaseId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                            <td>
                                <a asp-action="Approve" asp-route-id="@item.PurchaseId" class="btn btn-sm btn-success" onclick="return confirm('Are you sure to update?')">
                                    <i class="bi bi-check-circle"></i> Approve
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Static Details Section -->
            <div class="mt-4">
                <button class="btn btn-outline-secondary mb-2" data-bs-toggle="collapse" data-bs-target="#details1">
                    Toggle Product Details
                </button>
                <div id="details1" class="collapse">
                    <div class="card border">
                        <div class="card-header bg-light">
                            <strong>Purchase Item Details</strong>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-sm table-bordered text-center mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>VAT (%)</th>
                                        <th>Sub Total</th>
                                        <th>Store Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Engine Oil</td>
                                        <td>2</td>
                                        <td>400</td>
                                        <td>5</td>
                                        <td>840</td>
                                        <td>Main Store</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
