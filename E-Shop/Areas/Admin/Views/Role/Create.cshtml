@model E_Shop.ViewModels.RoleViewModel


<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="card shadow-lg border-0 rounded-4 w-100" style="max-width: 500px;">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h5 class="mb-0">
                <i class="bi bi-person-fill-add me-2"></i> Create Role
            </h5>
            <a asp-action="Index" class="btn btn-sm btn-outline-light">
                <i class="bi bi-arrow-left-circle"></i> Back
            </a>
        </div>

        <div class="card-body p-4 bg-white">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="RoleName" class="form-label fw-bold">Role Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-shield-lock-fill text-primary"></i></span>
                        <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                    </div>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-success btn-lg rounded-pill">
                        <i class="bi bi-check-circle-fill me-1"></i> Create Role
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
