@model IEnumerable<E_Shop.ViewModels.RoleViewModel>


<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-shield-lock-fill me-2 text-primary" style="font-size: 2rem;"></i>
            <h2 class="mb-0 fw-bold">Role List</h2>
        </div>
        <a asp-action="Create" class="btn btn-outline-primary rounded-pill">
            <i class="bi bi-plus-circle me-1"></i> Create Role
        </a>
    </div>

    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-bordered mb-0">
                <thead class="table-primary text-center">
                    <tr>
                        <th style="width: 20%;">@Html.DisplayNameFor(model => model.First().RoleId)</th>
                        <th>@Html.DisplayNameFor(model => model.First().RoleName)</th>
                        <th style="width: 25%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.RoleId</td>
                            <td>@item.RoleName</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-info me-1" title="Details">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


