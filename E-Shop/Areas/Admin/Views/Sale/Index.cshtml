 @model IEnumerable<E_Shop.ViewModels.SaleViewModel>

<a asp-action="Create" class="btn btn-primary mb-3">+ Sales Product</a>

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Sales History</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover align-middle text-center">
                <thead class="table-success">
                    <tr>
                        <th>Sale SL</th>
                        <th>Description</th>
                        <th>Customer </th>
                        <th>Grand Total</th>
                        <th>Approved</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td>@sale.SaleId</td>
                            <td>@sale.Description</td>
                            <td>@sale.CustomerId</td>
                            <td>@sale.GrandTotal</td>
                            <td>@(sale.IsApprove ? "Yes" : "No")</td>
                            <td>
                                <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#details-@sale.SaleId" aria-expanded="false" aria-controls="details-@sale.SaleId">
                                    View Details
                                </button>
                                <a asp-action="Delete" asp-route-id="@sale.SaleId" class="btn btn-sm btn-warning">Delete</a>
                            </td>
                        </tr>
                        <tr class="collapse" id="details-@sale.SaleId">
                            <td colspan="6">
                                <div class="p-2 border rounded">
                                    <h6 class="text-start text-secondary">Sale Details</h6>
                                    <table class="table table-sm table-bordered text-center mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>SaleDetails SL</th>
                                                <th>Product ID</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>VAT</th>
                                                <th>Sub Total</th>
                                                <th>Store ID</th>
                                                <th>WorkShop ID</th>
                                                <th>Bay Id</th>
                                                <th>Level ID</th>
                                                <th>VIN</th>
                                                <th>Registration No</th>
                                                <th>Start Time</th>
                                                <th>End Time</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var detail in sale.SaleDetailsViewModels)
                                            {
                                                <tr>
                                                    <td>@detail.SaleDetailsId</td>
                                                    <td>@detail.ProductId</td>
                                                    <td>@detail.Quantity</td>
                                                    <td>@detail.Price</td>
                                                    <td>@detail.Vat</td>
                                                    <td>@detail.SubTotal</td>
                                                    <td>@detail.StoreId</td>                                                    
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
