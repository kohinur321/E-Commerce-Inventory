<script type="text/javascript">
    $(document).ready(function () {

        var smsg = "@TempData["SuccessMessage"]";
        if (smsg != "") {
            alertify.notify(smsg, 'success');
        }
        var emsg = "@TempData["ErrorMessage"]";
        if (emsg != "") {
            alertify.error(emsg);
        }
    });
</script>    