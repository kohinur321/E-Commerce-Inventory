@model E_Shop.ViewModels.StockTypeViewModel

@{
    ViewData["Title"] = "Create Stock Type";
}


<div class="container mt-5">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-plus-square me-2"></i> Create Stock Type</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="StockTypeName" class="form-label fw-bold">
                        <i class="bi bi-box-seam me-1"></i> Stock Type Name
                    </label>
                    <input asp-for="StockTypeName" class="form-control" placeholder="Enter stock type name" />
                    <span asp-validation-for="StockTypeName" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-1"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


