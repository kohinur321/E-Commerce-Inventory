@model E_Shop.ViewModels.StockTypeViewModel

@{
    ViewData["Title"] = "Delete Stock Type";
}


<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Stock Type
            </h3>
        </div>

        <div class="card-body">
            <h5 class="text-center text-muted mb-4">Are you sure you want to delete this Stock Type?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-4">
                    <i class="bi bi-box-fill me-1 text-secondary"></i>Stock Type Name:
                </dt>
                <dd class="col-sm-8 text-dark">@Model.StockTypeName</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="StockTypeId" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill me-1"></i>Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
