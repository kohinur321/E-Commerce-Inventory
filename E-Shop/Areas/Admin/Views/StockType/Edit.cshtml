@using E_Shop.ViewModels
@model StockTypeViewModel

@{
    ViewData["Title"] = "Edit Stock Type";
}


<form asp-action="Edit" enctype="multipart/form-data" method="post" onsubmit="return ValidateForm()">
    <div class="card shadow-lg border-0 mt-4">
        <div class="card-header bg-info text-white text-center">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i> Edit Stock Type Information
            </h4>
        </div>

        <div class="card-body">
            <input asp-for="StockTypeId" type="hidden" />
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="StockTypeName" class="form-label fw-bold">
                            <i class="bi bi-box-seam-fill me-1 text-secondary"></i>Stock Type Name <span class="text-danger">*</span>
                        </label>
                        <input asp-for="StockTypeName" class="form-control" placeholder="Enter Stock Type Name" />
                        <span asp-validation-for="StockTypeName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer text-center bg-light">
            <div class="row justify-content-center">
                <div class="col-md-3 mb-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-check-circle-fill me-1"></i>Update
                    </button>
                </div>
                <div class="col-md-3">
                    <a asp-action="Index" class="btn btn-secondary w-100" asp-route-pg="@TempData.Peek("CurrentPage")">
                        <i class="bi bi-arrow-left-circle me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
