@model IEnumerable<E_Shop.ViewModels.StoreViewModel>

@{
    ViewData["Title"] = "Store List";
}

<div class="col-12 text-end mb-3">
    <a href="@Url.Action("Create", "Store", new { area = "Admin" })" class="btn btn-success">Create New Store</a>
</div>

<div class="card">
    <div class="card-header text-uppercase text-white text-center p-0" style="background:#21909F;">
        <p style="font-family: 'Brush Script'; font-size: 20px; padding: 5px;">Store Information</p>
    </div>
    <div class="row">
        <div class="card-body table-responsive">
            <table class="table table-sm table-striped table-bordered" id="myTable">
                <thead style="background:#21909F;" class="text-white">
                    <tr class="text-center">
                        <th>Store ID</th>
                        <th>Store Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var store in Model)
                    {
                        <tr>
                            <td>@store.StoreId</td>
                            <td>@store.StoreName</td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", "Store", new { id = store.StoreId, area = "Admin" })" class="btn btn-warning btn-sm">
                                        <i class="fa-solid fa-pencil"></i> Edit
                                    </a>
                                </div>
                                <div class="btn-group">
                                    <a href="@Url.Action("Delete", "Store", new { id = store.StoreId, area = "Admin" })" 
                                       class="btn btn-danger btn-sm" 
                                       onclick="return confirm('Are you sure you want to delete?');">
                                        <i class="fa-solid fa-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $('#myTable').dataTable();
    </script>
}
