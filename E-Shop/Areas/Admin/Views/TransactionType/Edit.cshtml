@model E_Shop.ViewModels.TransactionTypeViewModel

@{
    ViewData["Title"] = "Edit Transaction Type";
}

<h2>Edit Transaction Type</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TransactionTypeId" />
    <div class="form-group">
        <label asp-for="TransactionTypeName" class="control-label"></label>
        <input asp-for="TransactionTypeName" class="form-control" />
        <span asp-validation-for="TransactionTypeName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
