@model IEnumerable<E_Shop.ViewModels.TransactionTypeViewModel>

@{
    ViewData["Title"] = "Transaction Types";
}

<h2>Transaction Types</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Transaction Id</th>
            <th>Transaction Type Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TransactionTypeId</td>
                <td>@item.TransactionTypeName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TransactionTypeId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.TransactionTypeId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.TransactionTypeId" class="btn btn-danger btn-sm">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
