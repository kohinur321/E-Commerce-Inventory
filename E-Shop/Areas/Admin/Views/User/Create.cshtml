@model E_Shop.ViewModels.UserViewModel

<div class="container mt-4">
    <div class="card shadow rounded-4">
        <div class="card-header text-white text-center py-3" style="background:#21909F;">
            <h4 class="mb-0">
                <i class="bi bi-person-plus-fill me-2"></i> Add New User
            </h4>
        </div>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mt-3"></div>

            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-md-6">

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label fw-bold">
                                <i class="bi bi-person-circle me-1"></i> Full Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope-at-fill me-1"></i> Email Address <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Mobile" class="form-label fw-bold">
                                <i class="bi bi-phone-fill me-1"></i> Mobile Number <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Mobile" class="form-control" placeholder="Enter mobile number" />
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">
                                <i class="bi bi-geo-alt-fill me-1"></i> Residential Address
                            </label>
                            <input asp-for="Address" class="form-control" placeholder="Enter residential address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="d-flex align-items-center mb-3">
                            <i class="bi bi-check-circle-fill text-success me-2 fs-5"></i>
                            <label for="IsActive" class="me-2 fw-bold">Is Active</label>
                            <input asp-for="IsActive" class="form-check-input" />
                        </div>



                    </div>
                </div>
            </div>

            <div class="card-footer bg-light text-center">
                <div class="row justify-content-center">
                    <div class="col-md-3 mb-2">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle me-1"></i> Create
                        </button>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

