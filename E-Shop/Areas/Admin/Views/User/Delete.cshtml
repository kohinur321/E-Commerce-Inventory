@model E_Shop.ViewModels.UserViewModel

<div class="container mt-5">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-trash-fill me-3" style="font-size: 40px; color: #e74c3c;"></i>
        <h1 class="mb-0" style="font-size: 36px; color: #e74c3c;">Delete User</h1>
    </div>

    <h3 class="text-danger mb-4">Are you sure you want to delete this user?</h3>

    <div class="card shadow-sm p-4">
        <h4 class="mb-3">User Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Mobile)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Mobile)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactive</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="UserId" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash me-2"></i> Delete User
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>