@model E_Shop.ViewModels.UserViewModel

<div class="container mt-4">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white text-center py-3">
            <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i>Edit User Information</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="UserId" />

                <div class="form-group mb-3">
                    <label for="UserName" class="d-flex align-items-center">
                        <i class="bi bi-person me-2"></i> User Name
                    </label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Email" class="d-flex align-items-center">
                        <i class="bi bi-envelope me-2"></i> Email
                    </label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Mobile" class="d-flex align-items-center">
                        <i class="bi bi-telephone me-2"></i> Mobile
                    </label>
                    <input asp-for="Mobile" class="form-control" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="Address" class="d-flex align-items-center">
                        <i class="bi bi-house-door me-2"></i> Address
                    </label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-check-circle-fill text-success me-2 fs-5"></i>
                    <label for="IsActive" class="me-2 fw-bold">Is Active</label>
                    <input asp-for="IsActive" class="form-check-input" />
                </div>


                <div class="form-group text-center mt-3">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>
</div>