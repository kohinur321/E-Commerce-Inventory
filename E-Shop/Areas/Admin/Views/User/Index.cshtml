@model IEnumerable<E_Shop.ViewModels.UserViewModel>

<div class="container mt-4">
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Create New User
        </a>
    </div>

    <div class="card shadow rounded-4">
        <div class="card-header text-white text-center py-3" style="background: #21909F;">
            <h4 class="mb-0">
                <i class="bi bi-people-fill me-2"></i> User Information
            </h4>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                        <th>@Html.DisplayNameFor(model => model.First().UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Mobile)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                        <th>@Html.DisplayNameFor(model => model.First().IsActive)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.Mobile</td>
                            <td>@item.Address</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-info me-1">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
