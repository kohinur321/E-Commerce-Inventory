@model E_Shop.ViewModels.UserRoleViewModel

@{
    ViewData["Title"] = "Edit User Role";
}

<h2>Edit User Role</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserRoleId" />

    <div class="form-group">
        <label asp-for="UserId">User</label>
        <select asp-for="UserId" asp-items="Model.Users" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="RoleId">Role</label>
        <select asp-for="RoleId" asp-items="Model.Roles" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
