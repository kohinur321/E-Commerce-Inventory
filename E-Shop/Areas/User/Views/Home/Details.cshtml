@using E_Shop.ViewModel
@model ProductViewModel
@{}
<style>
    input{
        border:none;
    }
</style>
<div class="card mt-4">
    <div class="row pt-3 col-12">
        <div class="col-md-6 text-center">
            <img id="PhotoPrv" src="~/images/@Model.ImageUrl" style="border: 1px; margin: 10px; width: 300px; height: 300px;" />
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12 text-lg-start">
                    <input type="text" id="productId" hidden  value="@Model.ProductId" >
                    <input type="text" id="name" class="input-field w-100" style="font-size: 35px; border: none; outline: none;" value="@Model.Name" readonly>
                    <input type="text" id="unit" class="input-field w-100" style="font-size: 20px; border: none; outline: none;" value="@Model.Unit" readonly> 
                </div>

                <div class="col-md-12 input-group">
                    <div class="row">
                        <div class="col-1"><i class="fa-solid fa-bangladeshi-taka-sign pt-2" style="font-size: 30px; "></i></div>
                        <div class="col-11">
                            <input type="text" id="price" class="input-field w-100" style="font-size: 30px; font-weight: bold; border: none; outline: none;" value="@Model.Price" readonly>
                        </div>
                    </div>
                </div>


                <div class="row col-4">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <span class="btn btn-primary p-3 fw-bold" id="decrement">-</span>
                        </div>
                        <span class="text-center form-control py-3 fw-bold" readonly id="qtyNo">  </span>
                        <div class="input-group-append">
                            <span class="btn btn-primary p-3 fw-bold" id="increment">+</span>
                        </div>
                    </div>
                </div>
                <div class="row col-4">
                    <div class="btn-group">
                        <a id="buyNow" class="btn btn-danger fw-bold py-3">Buy Now</a>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="form-group col-md-12 ">
                    <p> @Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_productDetails" />

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/product.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            dataInit();
            getOrderItemDetails();
        });
    </script>
}