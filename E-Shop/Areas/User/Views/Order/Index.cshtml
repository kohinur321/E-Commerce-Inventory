@{}
<div class="card mt-3">
    <div class="row pt-3 col-12 m-auto">
        <div class="col-lg-6">
            <div class="form-group">
                <div class="row mb-2">
                    <div class="col-3 text-center p-2"><label>First Name<span class="st"> *</span></label></div>
                    <div class="col-9">
                        <input id="fname" type="text" class="form-control" required />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3 text-center p-2"><label>Last Name<span class="st"> *</span></label></div>
                    <div class="col-9">
                        <input id="lname" type="text" class="form-control" required />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3 text-center p-2"><label>Email<span class="st"> *</span></label></div>
                    <div class="col-9">
                        <input id="email" type="text" class="form-control" required />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3 text-center p-2"><label>Address<span class="st"> *</span></label></div>
                    <div class="col-9">
                        <textarea id="address" type="text" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5 m-auto">
            <div class="form-group">
                <div class="row">
                    <table class="table table-sm table-bordered">
                        <thead class="dark-mode">
                            <tr style="background:#21909F;">
                                <th class="text-center" scope="col">Images</th>
                                <th class="text-center" scope="col">Item Name</th>
                                <th class="text-center" scope="col">Quantity</th>
                                <th class="text-center" scope="col">Unit Price</th>
                                <th class="text-center" scope="col">Total Price</th>
                                <th class="text-center" scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody id="itemsbody" class="text-center px-0"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-group col-12 p-3">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-md-4 ">
            <a id="placeOrder" class="btn btn-primary btn-block w-100" style="font-size: 18px;">Place Order</a>
        </div>
        <div class="col-4"></div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/product.js"></script>
    <script type="text/javascript">
        $('#cartdetails').hide();
        getOrderItemDetails();
    </script>
}